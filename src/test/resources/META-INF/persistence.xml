<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="FutureForgeGearPU-test" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Elenca qui le entity -->
        <class>model.OrderManagement.Cart</class>
        <class>model.OrderManagement.Prodotto</class>
        <class>model.OrderManagement.CreditCard</class>
        <class>model.OrderManagement.Ordine</class>
        <class>model.OrderManagement.PayPal</class>
        <class>model.OrderManagement.CreditCard</class>
        <class>model.RequestManagement.Request</class>
        <class>model.RequestManagement.OrderRequest</class>
        <class>service.OrderService</class>
        <class>model.UserManagement.GestoreOrdini</class>
        <class>model.RequestManagement.ProductRequest</class>
        <class>model.OrderManagement.ItemCartDTO</class>
        <class>model.UserManagement.Utente</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:h2:mem:ffg_test;MODE=MySQL;DB_CLOSE_DELAY=-1;DATABASE_TO_UPPER=false"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>

        </properties>
    </persistence-unit>

</persistence>
